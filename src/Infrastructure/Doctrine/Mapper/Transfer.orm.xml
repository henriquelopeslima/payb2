<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Domain\Entity\Transfer" table="transfers">
        <id name="id" type="uuid" column="id">
            <generator strategy="NONE"/>
        </id>

        <many-to-one field="payer" target-entity="App\Domain\Entity\User">
            <join-column name="payer_id" nullable="false"/>
        </many-to-one>

        <many-to-one field="payee" target-entity="App\Domain\Entity\User">
            <join-column name="payee_id" nullable="false"/>
        </many-to-one>

        <field name="amount" column="amount" type="money_vo"/>

        <field name="status" column="status" type="transfer_status_enum" length="50"/>

        <field name="createdAt" column="created_at" type="datetime_immutable"/>
    </entity>
</doctrine-mapping>

